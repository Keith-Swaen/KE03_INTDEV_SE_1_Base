@page
@model KE03_INTDEV_SE_1_Base.Pages.BestellingenModel
@{
    ViewData["Title"] = "Bestellingen";
}

<h1>Bestellingen</h1>

@if (!Model.Bestellingen.Any())
{
    <div class="alert alert-info">Er zijn geen bestellingen.</div>
}
else
{
    <table id="bestellingenTable" class="table table-striped table-bordered">
        <thead class="table-light">
            <tr>
                <th>Order ID</th>
                <th>Klant</th>
                <th>Orderdatum</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var bestelling in Model.Bestellingen)
            {
                <tr>
                    <td>@bestelling.Id</td>
                    <td>@bestelling.Customer.Name</td>
                    <td>@bestelling.OrderDate.ToString("dd-MM-yyyy")</td>
                    <td>
                        <button type="button" class="btn btn-primary btn-sm" data-bs-toggle="modal" data-bs-target="#orderModal_@bestelling.Id">
                            Toon details
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @foreach (var bestelling in Model.Bestellingen)
    {
        var modalId = $"orderModal_{bestelling.Id}";
        var modalLabelId = $"orderModalLabel_{bestelling.Id}";

        <div class="modal fade" id="@modalId" tabindex="-1" aria-labelledby="@modalLabelId" aria-hidden="true">
            <div class="modal-dialog modal-lg modal-dialog-scrollable">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="@modalLabelId">Details bestelling @bestelling.Id</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Sluiten"></button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-sm table-bordered mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>Product</th>
                                    <th>Aantal</th>
                                    <th>Prijs per stuk</th>
                                    <th>Totaal</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in bestelling.Products)
                                {
                                    <tr>
                                        <td>@product.Name</td>
                                        <td>1</td> 
                                        <td>@product.Price.ToString("C")</td>
                                        <td>@product.Price.ToString("C")</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    }
}

@section Scripts {
    <script>
        $(document).ready(function () {
            var table = $('#bestellingenTable').DataTable({
                pageLength: 5,
                lengthChange: false,
                info: false,
                ordering: true,
                language: {
                    search: "Zoeken:",
                    paginate: {
                        previous: "Vorige",
                        next: "Volgende"
                    },
                    zeroRecords: "Geen bestellingen gevonden",
                    infoEmpty: "Geen bestellingen beschikbaar",
                    infoFiltered: "(gefilterd uit _MAX_ bestellingen)"
                },
                dom:
                    "<'row mb-3'<'col-sm-12 col-md-6 d-flex align-items-center'<'custom-length-info me-3'>>" +
                    "<'col-sm-12 col-md-6'f>>" +
                    "<'row'<'col-sm-12'tr>>"
            });

            $('.custom-length-info').html(`
                <span class="me-2">Toont</span>
                <select id="pageLengthSelect" class="form-select form-select-sm" style="width: auto; display: inline-block;">
                    <option value="5" selected>5</option>
                    <option value="10">10</option>
                    <option value="25">25</option>
                    <option value="50">50</option>
                </select>
                <span class="ms-2">bestellingen.</span>
            `);

            $('#pageLengthSelect').on('change', function () {
                var val = parseInt($(this).val());
                table.page.len(val).draw();
            });
        });
    </script>
}
