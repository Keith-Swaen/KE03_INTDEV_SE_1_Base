@page
@model IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="position-relative bg-dark text-white overflow-hidden w-100"
     style="background: linear-gradient(135deg, rgba(0, 0, 0, 0.8) 0%, rgba(0, 100, 0, 0.6) 100%), url('/img/matrixbackground.jpg') center/cover no-repeat; min-height: 80vh;">
    
    <div class="container py-5">
        <div class="row align-items-center min-vh-80 justify-content-center">
            <div class="col-lg-10 col-xl-8 text-center">
                <div class="px-3 px-lg-0">
                    <h1 class="display-3 display-lg-2 fw-bold mb-4 text-shadow">
                        Welkom bij <span class="text-success">Matrix Inc</span>
                    </h1>
                    <p class="lead fs-4 mb-5 opacity-90">
                        Ontdek onze collectie van de beste Matrix technologie en apparatuur. 
                    </p>
                    <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
                        <a href="/Products" class="btn btn-success btn-lg px-5 py-3 fw-semibold shadow-lg">
                            <i class="bi bi-shop me-2"></i>Bekijk onze producten
                        </a>
                        <a href="/Bestellingen" class="btn btn-outline-light btn-lg px-5 py-3 fw-semibold border-2">
                            <i class="bi bi-list-ul me-2"></i>Bekijk bestellingen
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="position-absolute top-0 end-0 d-none d-lg-block opacity-25">
        <div class="bg-success" style="width: 200px; height: 200px; border-radius: 50%; transform: translate(100px, -100px);"></div>
    </div>
</div>

<div class="container py-5">
    <div class="row mb-5">
        <div class="col-12 text-center">
            <h2 class="display-5 fw-bold mb-3">Uitgelichte Producten</h2>
        </div>
    </div>

    <div class="row g-4 g-lg-5 mb-5">
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                    <h5 class="card-title fw-bold fs-4 mb-3">Nebuchadnezzar</h5>
                    <p class="card-text text-muted mb-4 flex-grow-1">
                        Het legendarische schip waarop Neo voor het eerst de echte wereld leerde kennen. 
                        Volledig uitgerust met alle benodigde technologie.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span class="h4 text-success fw-bold mb-0">€ 10.000,00</span>
                        <a href="/Products" class="btn btn-outline-success px-4">
                            <i class="bi bi-shop me-2"></i>Naar winkel
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                    <h5 class="card-title fw-bold fs-4 mb-3">Jack-in Chair</h5>
                    <p class="card-text text-muted mb-4 flex-grow-1">
                        Stoel met metalen armen voor het inpluggen in de Matrix via de nekpoort. 
                        Comfortabel en veilig voor langdurig gebruik.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span class="h4 text-success fw-bold mb-0">€ 500,50</span>
                        <a href="/Products" class="btn btn-outline-success px-4">
                            <i class="bi bi-shop me-2"></i>Naar winkel
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-4">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-body text-center p-4 p-lg-5 d-flex flex-column">
                    <h5 class="card-title fw-bold fs-4 mb-3">EMP Device</h5>
                    <p class="card-text text-muted mb-4 flex-grow-1">
                        Electro-Magnetic Pulse wapentuig voor gebruik op de schepen van Zion. 
                        Krachtig en betrouwbaar in elke situatie.
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <span class="h4 text-success fw-bold mb-0">€ 129,99</span>
                        <a href="/Products" class="btn btn-outline-success px-4">
                            <i class="bi bi-shop me-2"></i>Naar winkel
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-success text-white py-4">
                    <div class="d-flex align-items-center">
                        <i class="bi bi-people-fill me-3" style="font-size: 1.5rem;"></i>
                        <h5 class="mb-0 fw-bold">Klanten Overzicht</h5>
                    </div>
                </div>
                <div class="card-body p-0">
        <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="bg-light">
                    <tr>
                                    <th class="px-4 py-4 fw-bold text-dark border-0">Klant</th>
                                    <th class="px-4 py-4 fw-bold text-dark border-0 text-center">Aantal Bestellingen</th>
                                    <th class="px-4 py-4 fw-bold text-dark border-0 text-center">Laatste Bestelling</th>
                    </tr>
                </thead>
                            <tbody>
                    @* Loopt door alle klanten om hun bestellingsinformatie te tonen *@
                    @foreach (var c in Model.Customers)
                    {
                                    <tr class="border-bottom">
                                        <td class="px-4 py-4">
                                            <span class="fw-bold fs-6 text-dark">@c.Name</span>
                                        </td>
                                        <td class="px-4 py-4 text-center">
                                            <span class="badge bg-success-subtle text-success px-3 py-2 fw-bold fs-6">
                                                @c.Orders.Count bestellingen
                                            </span>
                                        </td>
                                        <td class="px-4 py-4 text-center text-muted">
                                            @* Controleert of de klant bestellingen heeft en toont de laatste *@
                                            @if (c.Orders.Any())
                                            {
                                                <span class="fw-semibold">@c.Orders.OrderByDescending(o => o.OrderDate).First().OrderDate.ToString("dd-MM-yyyy")</span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
                </div>
            </div>
        </div>
    </div>
</div>
